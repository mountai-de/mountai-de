<style>
  .theme-switcher {
    display: flex;
    gap: var(--space-sm);
  }

  .theme-btn {
    padding: 0.5rem;
    font-size: 0.75rem;
    border: 1px solid var(--color-border);
    background: var(--color-bg);
    color: var(--color-text);
    cursor: pointer;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .theme-btn:hover {
    background: var(--color-bg-alt);
  }

  .theme-btn.active {
    background: var(--color-accent);
    color: var(--color-bg);
    border-color: var(--color-accent);
  }
</style>

